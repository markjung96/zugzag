{
  "compilerOptions": {
    "target": "ES2020", // ECMAScript 버전 설정 (ex: ES5, ES6, ES2020)
    "module": "ESNext", // 모듈 시스템 설정 (React의 최신 모듈 시스템 사용)
    "lib": ["DOM", "DOM.Iterable", "ES2020"], // React와 호환되는 라이브러리 설정
    "jsx": "react-jsx", // React JSX 변환 방식 설정 (React 17 이상에서 추천)
    "outDir": "./dist", // 컴파일된 파일의 출력 디렉토리
    "rootDir": "./src", // 소스 파일의 루트 디렉토리
    "strict": true, // 엄격한 타입 검사 옵션 활성화
    "esModuleInterop": true, // CommonJS와 ES 모듈 간의 호환성 설정
    "skipLibCheck": true, // 라이브러리의 타입 검사 생략 (컴파일 속도 향상)
    "forceConsistentCasingInFileNames": true, // 파일명 대소문자 일관성 강제
    "noImplicitAny": true, // 암시적 any 타입 사용 금지
    "moduleResolution": "node", // 모듈 해석 방식 설정 (Node.js 방식)
    "resolveJsonModule": true, // JSON 모듈 임포트 허용
    "isolatedModules": true, // 각 파일을 독립적인 모듈로 컴파일
    "allowSyntheticDefaultImports": true, // 기본 내보내기가 없는 모듈을 기본 내보내기로 가져올 수 있도록 허용
    "declaration": true, // .d.ts 타입 선언 파일 생성
    "sourceMap": true // 소스 맵 생성 (디버깅에 유용)
  },
  "include": ["src"], // 포함할 파일 경로
  "exclude": ["node_modules", "dist"] // 제외할 파일 경로
}
